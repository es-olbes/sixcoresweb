---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.astro';
import ServicesOverview from '../components/ServicesOverview.astro';

const title = "Inicio | SIXCORES | IT Solutions";
const description = "Diseño web profesional y reparación de ordenadores. Soluciones tecnológicas en Valencia y online.";
---

<BaseLayout {title} {description}>
  <Hero />

  <section class="py-12 bg-gray-50 dark:bg-gray-900">
    <div class="max-w-7xl mx-auto px-4 text-center">
      <h2 class="text-3xl font-bold text-gray-800 dark:text-white mb-4">Nuestros Servicios</h2>
      <p class="text-gray-600 dark:text-gray-300 max-w-2xl mx-auto mb-8">
        Ofrecemos soluciones modernas, eficientes y personalizadas para particulares y pequeñas empresas.
      </p>
      <ServicesOverview />
    </div>
  </section>

  <section class="py-12">
    <div class="max-w-4xl mx-auto px-4 text-center">
      <h3 class="text-2xl font-semibold mb-4">¿Listo para llevar tu presencia digital al siguiente nivel?</h3>
      <a
        href="/contacto"
        class="inline-block bg-blue-600 hover:bg-blue-700 text-white font-medium py-3 px-6 rounded-xl transition"
      >
        Solicita tu presupuesto gratuito
      </a>
    </div>
  </section>
</BaseLayout>
