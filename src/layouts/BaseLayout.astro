---
import "../styles/global.css";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";

// Props opcionales para personalizar el título y descripción en cada página
const {
  title = "SIXCORES | IT Solutions",
  description = "Servicios de diseño web y reparación de ordenadores en Valencia y online.",
} = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="/og-image.png" />
    <meta property="og:url" content="https://sixcores.com/" />

    <!-- Instagram -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="/og-image.png" />
    <meta property="og:url" content="https://sixcores.com/" />
    <meta property="og:type" content="article" />
    
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="/og-image.png" />
  </head>

  <body
    class="min-h-screen flex flex-col bg-white text-gray-800 dark:bg-gray-900 dark:text-white"
  >
    <Navbar />

    <main class="flex-1 container mx-auto px-4 py-8">
      <slot />
    </main>

    <Footer />
  </body>
</html>
