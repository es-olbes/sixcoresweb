---
import { useState } from 'astro/jsx-runtime'; // Solo si quieres interactividad con Alpine u otro lib en el futuro
import MobileMenu from './navigation/MobileMenu.astro';
---

<nav class="bg-white dark:bg-gray-950 border-b border-gray-200 dark:border-gray-800 shadow-sm sticky top-0 z-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-16 items-center">
      <!-- Logo / Brand -->
      <a href="/" class="flex items-center space-x-2 text-xl font-bold text-white dark:text-white">
        <img src="/logo.svg" alt="Descripción de tu icono" class="h-10 w-10 text-white dark:white">
        <span>SIXCORES</span>
      </a>

      <!-- Navegación principal -->
      <ul class="hidden md:flex space-x-6 text-sm font-medium">
        <li><a href="/" class="hover:text-amber-300 transition">Inicio</a></li>
        <li><a href="/servicios/" class="hover:text-amber-300 transition">Servicios</a></li>
        <li><a href="/acerca-de/" class="hover:text-amber-300 transition">Acerca de</a></li>
        <li><a href="/contacto/" class="hover:text-amber-300 transition">Contacto</a></li>
      </ul>

      <!-- Botón CTA -->
      <a
        href="/contacto/"
        class="hidden md:inline-block bg-amber-400 text-white px-4 py-2 rounded-xl hover:bg-amber-300  transition"
      >
        Solicita tu presupuesto
      </a>

      <!-- Hamburguesa móvil (opcional para siguiente versión) -->
       <MobileMenu />

    </div>
  </div>
</nav>